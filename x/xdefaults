! vim:ft=xdefaults

! Xft Font Settings.
Xft.dpi: 96
Xft.antialias: True
Xft.rgba: rgb
Xft.hinting: True
Xft.hintstyle: hintslight

urxvt.termName: rxvt-unicode-256color

! Basic Appearance
urxvt.background: Black
urxvt.foreground: Grey

! Some nice colors to soothe the eye. Lifted from a friendly person on the
! Archlinux forum.
urxvt.color0: #000000
urxvt.color1: #D32A2F
urxvt.color2: #27DE3A
urxvt.color3: #CE5C00
urxvt.color4: #0066FF
urxvt.color5: #AC00FF
urxvt.color6: #208F93
urxvt.color7: #CCCCCC
urxvt.color8: #555753
urxvt.color9: #FF2963
urxvt.color10: #A4FF00
urxvt.color11: #FFC123
urxvt.color12: #46A4FF
urxvt.color13: #FF00BB
urxvt.color14: #23D9E0
urxvt.color15: #FFFFFF

urxvt.transparent: False
urxvt.fading: 30
urxvt.shading: 70

! Set some nice fonts.
urxvt.font: xft:Envy Code R:style=Regular:pixelsize=14:autohint=true
urxvt.boldFont: xft:Envy Code R:style=Bold:pixelsize=14:autohint=true
urxvt.italicFont: xft:Envy Code R:style=Italic:pixelsize=14:autohint=true
urxvt.boldItalicFont: xft:Envy Code R:style=Bold:style=Italic:pixelsize=14:autohint=true

! Custom scrolling behaviour
urxvt.scrollBar: False
urxvt.scrollBar_right: False
urxvt.scrollStyle: plain
urxvt.scrollTtyOutput: False
urxvt.scrollWithBuffer: True
urxvt.scrollTtyKeypress: True

urxvt.saveLines: 12000

! Settings for urxvt-perl-extensions.
urxvt.perl-ext: default,matcher
urxvt.keysym.C-g: perl:matcher
urxvt.matcher.button: 2
urxvt.matcher.rend.0: Uline fg14 bg1
urxvt.urlLauncher: urxvt2uzbl.zsh
urxvt.searchable-scrollback: M-Tab
