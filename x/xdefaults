! Xft Font Settings.
Xft.dpi: 96
Xft.antialias: True
Xft.rgba: rgb
Xft.hinting: True
Xft.hintstyle: hintslight

urxvt.termName: rxvt-unicode-256color

urxvt.urgentOnBell: True

urxvt.iso14755: False
urxvt.iso14755_52: False

! Basic Appearance
urxvt.background: Black
urxvt.foreground: Grey

! Some nice colors to soothe the eye. Lifted from a friendly person on the
! Archlinux forum.
urxvt.color0: #000000
urxvt.color1: #D32A2F
urxvt.color2: #27DE3A
urxvt.color3: #CE5C00
urxvt.color4: #0066FF
urxvt.color5: #AC00FF
urxvt.color6: #208F93
urxvt.color7: #CCCCCC
urxvt.color8: #555753
urxvt.color9: #FF2963
urxvt.color10: #A4FF00
urxvt.color11: #FFC123
urxvt.color12: #46A4FF
urxvt.color13: #FF00BB
urxvt.color14: #23D9E0
urxvt.color15: #FFFFFF

urxvt.transparent: False
urxvt.fading: 30
urxvt.shading: 70

! Set some nice fonts.
urxvt.font: \
    xft:Fantasque Sans Mono:style=Regular:pixelsize=15:autohint=true, \
    xft:DejaVu Sans Mono:style=Regular:pixelsize=15:autohint=true, \
    xft:unifont:style=Medium:pixelsize=15:autohint=true
urxvt.boldFont: \
    xft:Fantasque Sans Mono:style=Bold:pixelsize=15:autohint=true, \
    xft:DejaVu Sans Mono:style=Bold:pixelsize=15:autohint=true
urxvt.italicFont:
    xft:Fantasque Sans Mono:style=Italic:pixelsize=15:autohint=true, \
    xft:DejaVu Sans Mono:style=Italic:pixelsize=15:autohint=true
urxvt.boldItalicFont: \
    xft:Fantasque Sans Mono:style=Bold:style=Italic:pixelsize=15:autohint=true, \
    xft:DejaVu Sans Mono:style=Bold:style=Italic:pixelsize=15:autohint=true

! Custom scrolling behaviour
urxvt.scrollBar: False
urxvt.scrollBar_right: False
urxvt.scrollStyle: plain
urxvt.scrollTtyOutput: False
urxvt.scrollWithBuffer: True
urxvt.scrollTtyKeypress: True

urxvt.saveLines: 12000

! Settings for urxvt-perl-extensions.
urxvt.perl-ext: default,matcher,font-size,unichr
urxvt.matcher.button: 2
urxvt.matcher.rend.0: Uline fg14
urxvt.url-launcher: firefox
urxvt.searchable-scrollback: M-Tab

urxvt.keysym.M-g: perl:matcher
urxvt.keysym.M-l: perl:matcher:list

urxvt.keysym.M-plus: perl:font-size:increase
urxvt.keysym.M-minus: perl:font-size:decrease
urxvt.keysym.M-equal: perl:font-size:reset

! Settings for XAutolock
xautolock.time: 5
xautolock.locker: xlock
xautolock.nowlocker: xlock -lockdelay 0
xautolock.killtime: 10
xautolock.killer: "(( $(cat /proc/sys/vm/laptop_mode) )) && sudo pm-suspend"

! Settings for XLock
xlock.mode: blank
xlock.lockdelay: 120
xlock.dpmsoff: 150
xlock.mousemotion: True
xlock.usefirst: False
xlock.echokeys: True
xlock.echokey: *

emacs.background: #000000
emacs.foreground: #CCCCCC

emacs.cursorBlink: off
emacs.menuBar: off
emacs.toolBar: 0
emacs.verticalScrollBars: off
